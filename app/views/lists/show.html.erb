<h3>Add movie</h3>

<div class="container">
  <div class="row mt-4">
    <% @list.bookmarks.each do |bookmark| %>
     <div class="col-4">
      <div class="card">
        <%= bookmark.movie.title %>
        <%= link_to "Delete movie", bookmark_path(bookmark), data: { turbo_method: :delete, turbo_confirm: "Are you sure?!" },
              class: "" %>
      </div>
   </div>
    <% end %>
 </div>
</div>

